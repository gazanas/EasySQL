<?xml version='1.0' standalone='yes'?>
	<schema>
		<table name='test_users'>
			<field>
				<name>id</name>
				<type>int unsigned</type>
				<primary>TRUE</primary>
				<increment>TRUE</increment>
				<null>FALSE</null>
			</field>
			<field>
				<name>username</name>
				<type>varchar(15)</type>
				<unique>TRUE</unique>
				<null>FALSE</null>
			</field>
			<field>
				<name>mail</name>
				<type>varchar(320)</type>
				<unique>TRUE</unique>
				<null>FALSE</null>
			</field>
			<field>
				<name>password</name>
				<type>varchar(60)</type>
				<null>FALSE</null>
			</field>
			<field>
				<name>is_active</name>
				<type>tinyint(1)</type>
				<default>0</default>
				<null>FALSE</null>
			</field>
			<field>
				<name>role</name>
				<type>varchar(10)</type>
				<default>'user'</default>
				<null>FALSE</null>
			</field>
			<field>
				<name>created_at</name>
				<type>timestamp</type>
				<default>NULL</default>
				<null>TRUE</null>
			</field>
			<field>
				<name>updated_at</name>
				<type>timestamp</type>
				<default>CURRENT_TIMESTAMP</default>
			</field>
		</table>
	</schema>